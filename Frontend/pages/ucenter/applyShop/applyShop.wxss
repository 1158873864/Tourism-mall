/* pages/ucenter/applyShop/applyShop.wxss */
/**用户信息样式**/
.info-container{
  height: 100%;
}
.page-body-setting {
  margin-top: 12rpx;
  height: 100%;
}
 
.page-body-setting-item {
  font-size: 32rpx;
  line-height: 90rpx;
   border-bottom-width: 90%;
  border-bottom: 2px solid #EFEFF4;
 
}
.own-info-item{
  width: 100%;
  display: block;
}
.info-name{
  width: 100%;
  font-size: 16px;
  color: #735108;
  margin-left: 10px;
}
.info-text{
  width: 100%;
  margin-right: 10px;
  font-size: 14px;
  color: #777777;
}
.input-text{
  margin-top: 20rpx;
  padding-left:24rpx;
}
.button{
  margin-top: 8px;
 background-color:#BB8B24;
 color: #FFF;
 width: 96%;
 margin-bottom: 10px;
}
.button-hover {
  background-color: #976D14;
}


/* 多行文本输入 */
textarea {
  line-height: 20px;
  height: 87px;
  padding-top:19rpx;
  padding-left:24rpx;
}
/* 图片显示 */
.img-view{
  display: flex;
  margin-left:10px;
}
.img-view .showimg{
  width: 200rpx;
  height: 200rpx;
}
/* 多选框 */
checkbox-group {
  display:flex;
  flex-wrap:wrap;
  margin-left: 8px;
}
.checkbox{
  display: block;
  margin:5px 5px 0px 5px;
}